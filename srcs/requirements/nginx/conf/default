server {
	listen 443; # 80번 포트로 서버 오픈 (ipv4)
	listen [::]:443; # 80번 포트로 서버 오픈 (ipv6)

	# 설정할 도메인/IP 지정
	server_name jeson.42.fr;

	# TLS version
	ssl_protocols TLSv1.2 TLSv1.3;

	# ssl
	ssl_certificate /etc/ssl/certs/localhost.crt
	ssl_certificate_key /etc/ssl/private/localhost_p.key

	# 엑세스 로그, 오류 로그를 남길 파일 경로
	# 로그를 남기지 않을경우, 삭제
	# access_log /var/log/nginx/test/access.log;
	# error_log /var/log/nginx/test/error.log;

	# 정적 파일이 위치할 루트를 설정
	root /var/www/wordpress;
	# 사이트에서 제공할 파일 설정
	index  index.php;

	# ＼.php$ -> .php
	location ~ \.php$ {
		# fastcgi_pass : 위치를 명시해 요청이 FastCGI서버에 전달되게 지정
		fastcgi_pass wordpress:9000;
		fastcgi_index index.php;
		# nginx -> PHP-fpm에 전달할 변수
		include fastcgi_params;
		fastcgi_param SCRIPT_FILENAME $document_root$fastcgi_script_name;
	}
}
